<header>
  <nav>
    <a class="header__logo" href="/" aria-label="Return Home">
    {% include "svgs/workmark.svg" %}
    </a>
    <ul>
      {% for group in menu|selectattr("inHeader") %}
        {% for item in group.items %}
          <li class="closed-menu">
            <a {{ 'class=' + item.class + '' if item.class }} {{ 'target=' + item.target + '' if item.target }} href="{{ item.url }}">{{ item.name }}</a>
          </li>
        {% endfor %}
      {% endfor %}
      <li class="closed-menu">
        <a id="menu-open" href=""><span class="hide-on-mobile">menu</span> {% include "svgs/menu-open.svg" %}</a>
      </li>
      <li class="opened-menu">
        <a id="menu-close" href="">{% include "svgs/menu-close.svg" %}</a>
      </li>
    </ul>
    <div class="gh-btn {{ 'hidden' if title !== 'Sovereign Computing'}}
    "><a class="github-button" href="https://github.com/Start9Labs/start-os" data-icon="octicon-star" data-size="large" data-show-count="true" aria-label="Star Start9Labs/start-os on GitHub">Star</a></div>
  </nav>
</header>